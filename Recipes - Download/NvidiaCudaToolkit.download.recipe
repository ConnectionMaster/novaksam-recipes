<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest CUDA toolkit from Nvidia.</string>
	<key>Identifier</key>
	<string>com.github.novaksam.download.NvidiaCUDAToolkit</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>NvidiaCudaToolkit</string>
		<key>SEARCH_PATTERN</key>
		<string>(http\://developer.download.nvidia.com/compute/cuda/[0-9].[0-9]/Prod/local_installers/cuda_[0-9].[0-9].[0-9][0-9]_mac.dmg)</string>
<!-- 
		<key>SEARCH_PATTERN_2</key>
		<string>(https\://developer.nvidia.com/sites/default/files/js/js_.+\.js)</string>
 -->
		<key>SEARCH_URL</key>
		<string>https://developer.nvidia.com/cuda-downloads</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.4.0</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>re_pattern</key>
				<string>%SEARCH_PATTERN%</string>
				<key>url</key>
				<string>%SEARCH_URL%</string>
			</dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
		</dict>
<!-- 
		<dict>
			<key>Arguments</key>
			<dict>
				<key>re_pattern</key>
				<string>%SEARCH_PATTERN%</string>
				<key>url</key>
				<string>%match%</string>
			</dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
		</dict>
 -->
		<dict>
			<key>Arguments</key>
			<dict>
				<key>filename</key>
				<string>%NAME%.dmg</string>
				<key>url</key>
				<string>%match%</string>
			</dict>
			<key>Processor</key>
			<string>URLDownloader</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>expected_authority_names</key>
				<array>
					<string>Developer ID Application: NVIDIA Corporation</string>
					<string>Developer ID Certification Authority</string>
					<string>Apple Root CA</string>
				</array>
				<key>input_path</key>
				<string>%pathname%/*.app</string>
			</dict>
			<key>Processor</key>
			<string>CodeSignatureVerifier</string>
		</dict>
		<dict>
			<key>Processor</key>
			<string>EndOfCheckPhase</string>
		</dict>
	</array>
</dict>
</plist>
